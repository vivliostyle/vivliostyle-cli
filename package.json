{
  "name": "@vivliostyle/cli",
  "description": "Save the pdf file via Headless Chrome and Vivliostyle.",
  "version": "3.0.0-pre.6",
  "author": "spring_raining <harusamex.com@gmail.com>",
  "scripts": {
    "build": "yarn clean && run-p build:*",
    "build:broker": "esbuild --bundle broker/main.js --outfile=broker/dist/bundle.js",
    "build:cli": "tsc && shx chmod +x dist/cli.js",
    "clean": "shx rm -rf dist tmp broker/dist",
    "dev": "run-p dev:*",
    "dev:broker": "nodemon -w broker -i broker/dist --exec 'esbuild --bundle --outfile=broker/dist/bundle.js broker/main.js'",
    "dev:cli": "tsc -w --preserveWatchOutput",
    "example": "yarn --cwd example build",
    "pretest": "yarn build",
    "release": "release-it",
    "release:pre": "release-it --preRelease --npm.tag=next",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@vivliostyle/core": "2.4.1",
    "@vivliostyle/vfm": "v1.0.0-alpha.10",
    "ajv": "^6.12.2",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.0",
    "commander": "^5.1.0",
    "debug": "^4.1.1",
    "globby": "^11.0.1",
    "hast-util-to-html": "^7.1.1",
    "hastscript": "^5.1.2",
    "image-size": "^0.8.3",
    "jsdom": "^16.2.2",
    "mathjax": "3.0.5",
    "mime-types": "^2.1.27",
    "ora": "^4.0.4",
    "pdf-lib": "^1.9.0",
    "pkg-up": "^3.1.0",
    "portfinder": "^1.0.26",
    "preact": "^10.4.5",
    "press-ready": "^4.0.3",
    "puppeteer": "5.5.0",
    "resolve-pkg": "^2.0.0",
    "serve-handler": "^6.1.3",
    "shelljs": "^0.8.4",
    "terminal-link": "^2.1.1",
    "tmp": "^0.2.1",
    "to-vfile": "^6.1.0",
    "upath": "^2.0.1",
    "uuid": "^8.2.0",
    "vfile": "^4.1.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.3",
    "@types/jsdom": "^16.2.3",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.0.14",
    "@types/puppeteer": "^3.0.1",
    "@types/serve-handler": "^6.1.0",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.0.0",
    "esbuild": "^0.8.31",
    "execa": "^4.0.2",
    "file-type": "^14.6.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "^1.1.0",
    "pretty-quick": "^2.0.1",
    "release-it": "^13.6.4",
    "shx": "^0.3.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "bin": {
    "vivliostyle": "dist/cli.js",
    "vs": "dist/cli.js"
  },
  "files": [
    "broker",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/vivliostyle/vivliostyle-cli.git",
  "bugs": "https://github.com/vivliostyle/vivliostyle-cli/issues",
  "homepage": "https://github.com/vivliostyle/vivliostyle-cli",
  "keywords": [
    "vivliostyle"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=10 <=12 || >=14.1.0"
  }
}
